enum Mood {
  ANGRY
  ANXIOUS
  CALM
  CONFUSED
  DEPRESSED
  EXCITED
  HAPPY
  HOPEFUL
  SAD
  STRESSED
}

enum ThoughtType {
  IDEA
  MEMORY
  PLAN
  WORRY
}

enum MediaType {
  VIDEO
  AUDIO
  TEXT
}

model Media {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  type      MediaType
  url       String
  thoughtId Int       @unique
  thought   Thought   @relation(fields: [thoughtId], references: [id])
}

model Thought {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  content   String      @db.Char(255)
  type      ThoughtType
  mood      Mood
  sphereId  Int         @unique
  sphere    Sphere      @relation(fields: [sphereId], references: [id])
  Media     Media?
}

model Sphere {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  user     User      @relation(fields: [userId], references: [id])
  userId   Int       @unique
  thoughts Thought[]
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  spheres Sphere[]
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
